
@model Ada.Core.ViewModel.Setting.WeiGuang
@{
    ViewBag.Title = "系统配置";

}
<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>@ViewBag.Title</h2>
        <ol class="breadcrumb">
            <li>
                <a href="@Url.Action("Index","Home",new{area= "Dashboards" })">工作台</a>
            </li>
            <li class="active">
                <strong>@ViewBag.Title</strong>
            </li>
        </ol>
    </div>
    <div class="col-lg-2">
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">

                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <p class="bg-danger">@Html.ValidationMessage("message") </p>
                        <div class="form-horizontal">
                            <h3>资源查询配置</h3>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.PurchaseSeachRows, Html.DisplayNameFor(d => d.PurchaseSeachRows).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.PurchaseSeachRows, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(d => d.BusinessSeachRows, Html.DisplayNameFor(d => d.BusinessSeachRows).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.BusinessSeachRows, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(d => d.PurchaseExportRows, Html.DisplayNameFor(d => d.PurchaseExportRows).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.PurchaseExportRows, new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(d => d.BusinessExportRows, Html.DisplayNameFor(d => d.BusinessExportRows).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.BusinessExportRows, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.BusinessOrderExportRows, Html.DisplayNameFor(d => d.BusinessOrderExportRows).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.BusinessOrderExportRows, new { @class = "form-control" })
                                </div>
                            </div>
                            <h3>销售提成系数</h3>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.ReturnDays1, Html.DisplayNameFor(d => d.ReturnDays1).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.TextBoxFor(d => d.ReturnDays1, new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-2">
                                            @Html.TextBoxFor(d => d.Percentage1, new { @class = "form-control" })
                                        </div>
                                    </div>

                                </div>
                            </div>

                            <div class="form-group">
                                @Html.LabelFor(d => d.ReturnDays2, Html.DisplayNameFor(d => d.ReturnDays2).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    <div class="row">
                                        <div class="col-md-2">
                                            @Html.TextBoxFor(d => d.ReturnDays2, new { @class = "form-control" })
                                        </div>
                                        <div class="col-md-2">
                                            @Html.TextBoxFor(d => d.Percentage2, new { @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <button class="btn btn-success" type="submit"><i class="fa fa-floppy-o"></i> 保存</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>


