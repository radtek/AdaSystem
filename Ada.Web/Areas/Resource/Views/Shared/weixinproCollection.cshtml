@model Ada.Core.ViewModel.API.iDataAPI.WeiXinProParams
@{
    var ranges=new List<SelectListItem>()
    {
        new SelectListItem(){Text = "一天内",Value = "d"},
        new SelectListItem(){Text = "一周内",Value = "w"},
        new SelectListItem(){Text = "一月内",Value = "m"},
        new SelectListItem(){Text = "一年内",Value = "y"}
    };
}
<div class="modal inmodal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        @using (Html.BeginForm("WeiXinProCollection","Media"))
        {
            
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">采集微信文章(iDataAPI)</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(d => d.WeiXinId, Html.DisplayNameFor(d => d.WeiXinId).ToString(), new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                <div class="input-group">
                                    @Html.TextBoxFor(d => d.WeiXinId, new { @class = "form-control", @readonly = "" })
                                    <span class="input-group-btn">
                                        <button type="button" class="btn btn-warning" onclick="window.open('http://weixin.sogou.com/weixin?type=1&query=@Model.WeiXinId');">
                                            验证公众号
                                        </button>
                                    </span>
                                </div>
                                
                                <span class="help-block m-b-none">获取该公众号下的文章.</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(d => d.PageNum, Html.DisplayNameFor(d => d.PageNum).ToString(), new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(d => d.PageNum, new { @class = "form-control" })
                                <span class="help-block m-b-none">获取公众号文章页数，每页默认10篇文章.</span>
                            </div>
                        </div>
                        <div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(d => d.Range, Html.DisplayNameFor(d => d.Range).ToString(), new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.DropDownListFor(d => d.Range, ranges, "请选择", new { @class = "form-control" })
                                <span class="help-block m-b-none">获取一段时间范围以来的公众号文章.</span>
                            </div>
                        </div>
                    </div>
                    @Html.HiddenFor(d=>d.CallIndex)
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-primary ladda-button" data-style="zoom-in">采集</button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                </div>
            </div>
        }
    </div>
</div>