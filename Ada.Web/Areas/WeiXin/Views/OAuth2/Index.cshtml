@using System.Web.Optimization
@using Ada.Core.Infrastructure
@using Ada.Core.ViewModel.Setting
@using Ada.Services.Setting
@{
    Layout = null;
    var setting = EngineContext.Current.Resolve<ISettingService>().GetSetting<Site>();
}

<!DOCTYPE html>
<html>
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <title>江西微广 | 微信绑定</title>

    <link href="~/Content/bootstrap.min.css" rel="stylesheet">
    <link href="~/Fonts/font-awesome/css/font-awesome.css" rel="stylesheet">

    <link href="~/Content/animate.css" rel="stylesheet">
    <link href="~/Content/style.css" rel="stylesheet">
    @Styles.Render("~/plugins/socialButtonsStyles")
</head>

<body class="gray-bg">

<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">账户绑定</h2>

                <p>
                    请选择相应的系统平台进行绑定.
                </p>

                <div class="row">

                    <div class="col-lg-12">
                        <a class="btn btn-block btn-social btn-google" href="@ViewBag.AdminBinding">
                            <span class="fa fa-cubes"></span> 管理系统绑定
                        </a>
                        <a class="btn btn-block btn-social btn-vimeo" href="@ViewBag.AdminBinding">
                            <span class="fa fa-user-circle-o"></span> 会员系统绑定
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            @setting.CompanyName
        </div>
        <div class="col-md-6 text-right">
            <small>© 2015-@DateTime.Now.Year</small>
        </div>
    </div>
</div>


</body>

</html>



