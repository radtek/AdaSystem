@using Ada.Core.Infrastructure
@using Ada.Core.ViewModel.Setting
@using Ada.Services.Setting
@{
    Layout = "~/Views/Shared/_Layout_Home.cshtml";
    var setting = EngineContext.Current.Resolve<ISettingService>().GetSetting<Site>();
    ViewBag.Title = "系统登陆";
}
<div class="middle-box text-center loginscreen  animated fadeInDown">
    <div>
        <div>

            <h1 class="logo-name">VG+</h1>

        </div>
        <h3>欢迎来到微广+</h3>

        <div id="login_container"></div>

        <p class="m-t"> <small>@setting.CompanyName &copy; @DateTime.Now.Year</small> </p>
    </div>
</div>


@section Scripts {
    
    <script src="http://res.wx.qq.com/connect/zh_CN/htmledition/js/wxLogin.js"></script>
    <script type="text/javascript">

        $(function() {
            var obj = new WxLogin({
                self_redirect:false,
                id:"login_container", 
                appid: "wx4cc90f050274ab2e", 
                scope: "snsapi_login", 
                redirect_uri: "http://www.jxweiguang.com/weixin/login/validate",
                state: "12121212",
                //style: "",
                //href: ""
            });
        });

    </script>
}
