@model List<Ada.Core.Domain.WorkFlow.WorkFlowDefinition>
@{
    ViewBag.Title = "发起申请";
}
@Html.Partial("Bread")

<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-lg-3">
                <div class="contact-box center-version">
                    <a href="javascript:;">
                        <i class="fa fa-sitemap fa-4x"></i>
                        <h2 class="m-b-xs"><strong>@item.Name</strong></h2>
                        <div class="font-bold">@item.Description</div>
                    </a>
                    <div class="contact-box-footer">
                        <div class="m-t-xs btn-group">
                            @if (item.Enabled)
                            {
                                <a class="btn btn-primary btn-outline" href="@Url.Action("Add", new {id = item.Id})"><i class="fa fa-paper-plane"></i> 开始申请 </a>
                            }
                            else
                            {
                                <button class="btn btn-default" disabled="disabled"><i class="fa fa-frown-o"></i> 暂未开启 </button>
                            }
                            
                        </div>
                    </div>
                </div>
            </div>
        }

    </div>
</div>