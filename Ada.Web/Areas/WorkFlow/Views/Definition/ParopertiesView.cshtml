@model Ada.Core.ViewModel.WorkFlow.WorkFlowDefinitionView
<div class="modal inmodal" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content animated bounceInRight">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <i class="fa fa-cube modal-icon"></i>
                <h4 class="modal-title">流程定义</h4>
                <small class="font-bold">工作流程名称</small>
            </div>
            <div class="modal-body">
                <div class="form-horizontal">
                    <div class="form-group">
                        @Html.TextBoxFor(d => d.Name, new { @class = "form-control", required = "", placeholder="请输入工作流程名称"})
                    </div>
                    @Html.HiddenFor(d => d.Id)
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary ladda-button" onclick="wfNamePost();" data-style="zoom-in">提交</button>
            </div>
        </div>
    </div>
</div>
