@model List<Ada.Core.Domain.Resource.MediaType>
<div class="modal inmodal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">选择媒体</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-12">
                        <div class="tabs-container">
                            <div class="">
                                <ul class="nav nav-tabs">
                                    @foreach (var item in Model)
                                    {
                                        if (item.CallIndex == "weixin")
                                        {
                                            <li class="active" data-value='@Html.Raw(Json.Encode(item.AdPositions.Select(d => d.Name)))' data-key="@item.CallIndex" onclick="initMediaData($(this),true);">
                                                <a data-toggle="tab" href="#tab">@item.TypeName</a>
                                            </li>

                                        }
                                        else
                                        {
                                            <li class="" data-value='@Html.Raw(Json.Encode(item.AdPositions.Select(d => d.Name)))' data-key="@item.CallIndex" onclick="initMediaData($(this),true);">
                                                <a data-toggle="tab" href="#tab">@item.TypeName</a>
                                            </li>
                                        }
                                    }
                                </ul>
                                <div class="tab-content ">
                                    <div id="tab" class="tab-pane active">
                                        <div class="panel-body">
                                            <table id="mediaTable">
                                            </table>
                                            <div id="mediatoolbar">
                                                <div class="form-inline" role="form">
                                                    
                                                    <div class="form-group">
                                                        <div class="col-sm-12">
                                                            <div class="row">
                                                                <div class="col-md-2">
                                                                    <select name="AdPositionName" class="form-control input-sm" id="AdPositionName"></select>
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <input class="form-control input-sm" type="text" value="" id="MediaId" placeholder="媒体ID（模糊）">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <input class="form-control input-sm" type="text" value="" id="MediaName" placeholder="媒体名称（模糊）">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <input class="form-control input-sm" type="text" value="" id="MediaIds" placeholder="媒体ID（批量）">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <input class="form-control input-sm" type="text" value="" id="MediaNames" placeholder="媒体名称（批量）">
                                                                </div>
                                                                <div class="col-md-2">
                                                                    <button type="button" class="btn btn-primary btn-sm" onclick="$mediatable.bootstrapTable('refresh');">
                                                                        <i class='fa fa-search'></i> 搜索
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                        @*<label>广告位: </label>*@
                                                        

                                                    </div>
                                                    @*<div class="form-group">
                                                       
                                                    </div>
                                                    <div class="form-group">
                                                        
                                                    </div>
                                                    <div class="form-group">
                                                        
                                                    </div>
                                                    <div class="form-group">
                                                       

                                                        
                                                    </div>*@
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                  
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" onclick="confirmData();">确定</button>
                <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
            </div>
        </div>
        
    </div>
</div>