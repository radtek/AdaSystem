
@using System.Web.Optimization
@model Ada.Core.ViewModel.Business.BusinessOrderView
@{
    ViewBag.Title = "编辑销售订单";
    List<SelectListItem> urls = new List<SelectListItem>() { new SelectListItem() { Text = "销售订单", Value = Url.Action("Index") } };
}
@Html.Partial("Bread", urls)

<div class="wrapper wrapper-content">
    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <p class="bg-danger">@Html.ValidationMessage("message") </p>
        <div class="row">
            <div class="col-lg-12">
                <div class="ibox">
                    <div class="ibox-title">
                        <a class="btn btn-outline btn-default btn-sm" href="@Url.Action("Index")"><i class="fa fa-reply"></i> 返回</a>
                        <button class="btn btn-success btn-sm" type="submit" data-style="slide-right"><i class="fa fa-floppy-o"></i> 保存</button>
                        <button class="btn btn-info btn-sm" type="button" onclick="transOrder('@Model.Id');"><i class="fa fa-floppy-o"></i> 转成采购订单</button>
                        <button class="btn btn-primary btn-sm" type="button"><i class="fa fa-floppy-o"></i> 审核</button>
                        <button class="btn btn-warning btn-sm" type="button"><i class="fa fa-floppy-o"></i> 弃审</button>
                        <button class="btn btn-danger btn-sm" type="button"><i class="fa fa-floppy-o"></i> 作废</button>
                    </div>
                    <div class="ibox-content">
                        <div class="sk-spinner sk-spinner-wave">
                            <div class="sk-rect2"></div>
                            <div class="sk-rect3"></div>
                            <div class="sk-rect4"></div>
                            <div class="sk-rect5"></div>
                        </div>
                        @Html.Partial("OrderEdit", Model)
                        @Html.HiddenFor(d=>d.Id)
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Styles {
    @Styles.Render("~/plugins/dateTimePickerStyle")
    @Styles.Render("~/plugins/bootstrapTableStyle")
    @Styles.Render("~/plugins/bootstrapEditTableStyle")
    @Styles.Render("~/plugins/select2Styles")

}
@section Scripts {
    @Scripts.Render("~/plugins/dateTimePickerScript")
    @Scripts.Render("~/plugins/bootstrapTableScript")
    @Scripts.Render("~/plugins/bootstrapEditTableScript")
    @Scripts.Render("~/plugins/select2")
    @Scripts.Render("~/plugins/lodash")
    <script>
        var linkmanUrl = "@Url.Action("GetList", "LinkMan", new {area = "Customer"})",
            managerUrl = "@Url.Action("GetList", "Manager", new {area = "Admin"})",
            mediapriceUrl = "@Url.Action("GetMediaPrices", "Media", new { area = "Resource" })",
            orderData =@Html.Raw(string.IsNullOrWhiteSpace(Model.OrderDetails)?"[]": Model.OrderDetails);

    </script>
    <script src="@Url.Content("~/Areas/Business/Scripts/order.js")"></script>
    <script>
        function transOrder(id) {
            swal({
                title: "您确定吗?",
                text: "确认要转成采购订单吗?",
                type: "warning",
                showCancelButton: true,
                confirmButtonColor: "#DD6B55",
                confirmButtonText: "确定",
                cancelButtonText: "取消",
                closeOnConfirm: false
            }, function () {
                $.ajax({
                    type: "post",
                    headers: {
                        '__RequestVerificationToken': $('@Html.AntiForgeryToken()').val()
                    },
                    url: "@Url.Action("TransformPurchaseOrder")",
                    data: { "id": id },
                    success: function (data) {
                        if (data.State == 1) {
                            swal({
                                title: "操作成功",
                                text: data.Msg,
                                timer: 2000,
                                type:"success",
                                showConfirmButton: false
                            });

                        } else {
                            swal("操作提醒", data.Msg, "warning");
                        }
                    },
                    error: function () {
                        swal("操作失败", data.Msg, "error");
                    },
                    complete: function () {

                    }
                });
            });
        }
    </script>
}
