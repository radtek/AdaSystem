@model List<Ada.Core.Domain.Resource.MediaType>
<div class="modal fade" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title">选择媒体</h4>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-lg-3">
                        <div class="ibox">
                            <div class="ibox-content">
                                <h4>媒体类型</h4>
                                <div class="list-group">
                                    @foreach (var item in Model)
                                    {
                                        <a class="list-group-item" href="javascript:;" onclick="mediasByType(this,'@item.CallIndex');">
                                            <h5 class="list-group-item-heading">@item.TypeName</h5>
                                        </a>
                                    }
                                </div>
                                    
                                
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-9 animated fadeInRight">
                        <table id="mediaTable">
                        </table>
                    </div>
                </div>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" onclick="confirmData();">确定</button>
            </div>
        </div>
    </div>
</div>