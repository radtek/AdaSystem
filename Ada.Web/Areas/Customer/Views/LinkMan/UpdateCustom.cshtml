@using System.Web.Optimization
@using Ada.Core.Infrastructure
@using Ada.Services.Admin
@model Ada.Core.ViewModel.Customer.LinkManView
@{
    ViewBag.Title = "更新客户";
    List<SelectListItem> urls = new List<SelectListItem>() { new SelectListItem() { Text = "客户信息", Value = Url.Action("Custom") } };
    var fieldService = EngineContext.Current.Resolve<IFieldService>();
    var linkManTypes = fieldService.GetFieldsByKey("LinkManType").Select(d => new SelectListItem { Text = d.Text, Value = d.Value });
    var linkManStatus = fieldService.GetFieldsByKey("LinkManStatus").Select(d => new SelectListItem { Text = d.Text, Value = d.Value });

}
@Html.Partial("Bread", urls)
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>@ViewBag.Title <small>请保证信息的准确性.</small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <p class="bg-danger">@Html.ValidationMessage("message") </p>
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(d => d.CommpanyId, Html.DisplayNameFor(d => d.CommpanyId).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    
                                    <select class="form-control" required="" name="CommpanyId" id="CommpanyId">
                                        <option value="@Model.CommpanyId">@Model.CommpanyName</option>
                                    </select>
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.Name, Html.DisplayNameFor(d => d.Name).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.Name, new { @class = "form-control", required = "" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.WorkName, Html.DisplayNameFor(d => d.WorkName).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.WorkName, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.LinkManType, Html.DisplayNameFor(d => d.LinkManType).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(d => d.LinkManType, linkManTypes, "请选择", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.Status, Html.DisplayNameFor(d => d.Status).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(d => d.Status, linkManStatus, "请选择", new { @class = "form-control" })
                                </div>
                            </div>

                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.Phone, Html.DisplayNameFor(d => d.Phone).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.Phone, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.WeiXin, Html.DisplayNameFor(d => d.WeiXin).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.WeiXin, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.QQ, Html.DisplayNameFor(d => d.QQ).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.QQ, new { @class = "form-control" })
                                </div>
                            </div>


                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <a class="btn btn-outline btn-default" href="@Url.Action("Custom")"><i class="fa fa-reply"></i> 返回</a>
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-floppy-o"></i> 保存</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    @Styles.Render("~/plugins/select2Styles")
}
@section Scripts {
    @Scripts.Render("~/plugins/select2")
    <script>
        $(function() {
            $("#CommpanyId").select2({
                placeholder: "请选择",
                language: "zh-CN",
                //adaptContainerCssClass:"form-control",
                //allowClear: true,
                ajax: {
                    url: "@Url.Action("GetList","Commpany")",
                    dataType: 'json',
                    delay: 800,
                    data: function (params) {
                        return {
                            search: params.term, // search term
                            IsBusiness: false
                        };
                    },
                    processResults: function (data, params) {
                        var result = $.map(data.rows, function(v, k) {
                            return { id: v.Id, text: v.Name };
                        });
                        return {
                            results: result
                        };
                    },
                    cache: true
                },
                escapeMarkup: function (markup) { return markup; }, // 字符转义处理
                minimumInputLength: 1,
                templateResult: formatRepo,//返回结果回调function formatRepo(repo){return repo.text},这样就可以将返回结果的的text显示到下拉框里，当然你可以return repo.text+"1";等
                templateSelection: formatRepoSelection//选中项回调function formatRepoSelection(repo) { return repo.text }

            });
        });
        function formatRepo(repo) {
            if (repo.loading) {
                return repo.text;
            }
            return repo.text;
        }
        function formatRepoSelection(repo) {
            return repo.text;
        }

    </script>
}



