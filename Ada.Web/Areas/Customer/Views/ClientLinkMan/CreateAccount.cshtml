@model Ada.Core.ViewModel.Customer.LinkManView
<div class="modal inmodal fade" tabindex="-1" role="dialog" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        @using (Html.BeginForm("CreateAccount", "ClientLinkMan"))
        {
            @Html.AntiForgeryToken()
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                    <h4 class="modal-title">【@Model.Name】开通会员</h4>
                </div>
                <div class="modal-body">
                    <div class="form-horizontal">
                        <div class="form-group">
                            @Html.LabelFor(d => d.LoginName, Html.DisplayNameFor(d => d.LoginName).ToString(), new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(d => d.LoginName, new { @class = "form-control", required = "" })
                            </div>
                        </div>
                        @*<div class="hr-line-dashed"></div>
                        <div class="form-group">
                            @Html.LabelFor(d => d.Password, Html.DisplayNameFor(d => d.Password).ToString(), new { @class = "col-sm-2 control-label" })
                            <div class="col-sm-10">
                                @Html.TextBoxFor(d => d.Password, new { @class = "form-control", required = "" })
                            </div>
                        </div>*@
                        @Html.HiddenFor(d => d.Password)
                        @Html.HiddenFor(d => d.Id)
                    </div>

                </div>
                <div class="modal-footer">
                    <button type="submit" class="ladda-button btn btn-primary" data-style="zoom-in">开通</button>
                    <button type="button" class="btn btn-white" data-dismiss="modal">关闭</button>
                </div>
            </div>
        }
    </div>
</div>
