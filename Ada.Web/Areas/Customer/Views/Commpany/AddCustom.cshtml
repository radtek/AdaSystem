@using System.Web.Optimization
@using Ada.Core.Infrastructure
@using Ada.Services.Admin
@model Ada.Core.ViewModel.Customer.CommpanyView
@{
    ViewBag.Title = "客户建档";
    List<SelectListItem> urls = new List<SelectListItem>() { new SelectListItem() { Text = "客户公司", Value = Url.Action("Custom") } };
    var fieldService = EngineContext.Current.Resolve<IFieldService>();
    var citys = fieldService.GetFieldsByKey("Area").Select(d => new SelectListItem {Text = d.Text, Value = d.Value});
    var commpanyTypes = fieldService.GetFieldsByKey("行业分类").Select(d => new SelectListItem { Text = d.Text, Value = d.Value });
    var commpanyGrades = fieldService.GetFieldsByKey("公司等级").Select(d => new SelectListItem { Text = d.Text, Value = d.Value });
}
@Html.Partial("Bread", urls)
<div class="wrapper wrapper-content animated fadeInRight">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-title">
                    <h5>@ViewBag.Title <small>请保证信息的准确性.</small></h5>
                    <div class="ibox-tools">
                        <a class="collapse-link">
                            <i class="fa fa-chevron-up"></i>
                        </a>

                    </div>
                </div>
                <div class="ibox-content">
                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        <p class="bg-danger">@Html.ValidationMessage("message") </p>
                        <div class="form-horizontal">
                            <div class="form-group">
                                @Html.LabelFor(d => d.Name, Html.DisplayNameFor(d => d.Name).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.Name, new { @class = "form-control", required = "" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.City, Html.DisplayNameFor(d => d.City).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(d => d.City, citys, "请选择", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.CommpanyType, Html.DisplayNameFor(d => d.CommpanyType).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(d => d.CommpanyType, commpanyTypes, "请选择", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.CommpanyGrade, Html.DisplayNameFor(d => d.CommpanyGrade).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.DropDownListFor(d => d.CommpanyGrade, commpanyGrades, "请选择", new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.Address, Html.DisplayNameFor(d => d.Address).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.Address, new { @class = "form-control" })
                                </div>
                            </div>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.Phone, Html.DisplayNameFor(d => d.Phone).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    @Html.TextBoxFor(d => d.Phone, new { @class = "form-control" })
                                </div>
                            </div>

                            @*<div class="hr-line-dashed"></div>
                            <div class="form-group">
                                @Html.LabelFor(d => d.IsBusiness, Html.DisplayNameFor(d => d.IsBusiness).ToString(), new { @class = "col-sm-2 control-label" })
                                <div class="col-sm-10">
                                    <div class="radio radio-info radio-inline">
                                        @Html.RadioButtonFor(d => d.IsBusiness, true)
                                        <label> 是 </label>
                                    </div>
                                    <div class="radio radio-info radio-inline">
                                        @Html.RadioButtonFor(d => d.IsBusiness, false)
                                        <label> 否 </label>
                                    </div>
                                </div>
                            </div>*@
                            <input type="hidden" name="IsBusiness" value="false"/>
                            <div class="hr-line-dashed"></div>
                            <div class="form-group">
                                <div class="col-sm-4 col-sm-offset-2">
                                    <a class="btn btn-outline btn-default" href="@Url.Action("Custom")"><i class="fa fa-reply"></i> 返回</a>
                                    <button class="btn btn-primary" type="submit"><i class="fa fa-floppy-o"></i> 保存</button>
                                </div>
                            </div>
                        </div>
                    }

                </div>
            </div>
        </div>
    </div>
</div>

